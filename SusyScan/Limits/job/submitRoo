DATESTR=`date +%F-%k-%M`-RooLimit
WORKPATH=/scratch/hh/lustre/cms/user/auterman/jobs/$DATESTR
#WORKPATH=/afs/naf.desy.de/user/a/auterman/Jobs/$DATESTR
##THISDIR=`pwd`
mkdir $WORKPATH
mkdir $DATESTR
ls ../limits/*.dat > $DATESTR/limits.txt
split -a 4 -l 5 -d $DATESTR/limits.txt $DATESTR/limit_
mv $DATESTR/limit_0000 $DATESTR/limit_0`ls -l $DATESTR/limit_* | wc -l`
rm -f Job.sh
sed "s/AUniquePlaceholderName/$DATESTR/g" JobRooOrig.sh > JobRoo.sh
chmod a+x JobRoo.sh
echo "qsub -j y -o /dev/null -t 1-`ls -l $DATESTR/limit_* | wc -l` -l h_cpu=00:14:59 -l h_vmem=4000M JobRoo.sh"
